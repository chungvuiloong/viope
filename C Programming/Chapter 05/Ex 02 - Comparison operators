#include <stdio.h>

int main(){
	
	//Variables
  	char coffeeOrTea;
	int numOfDrinks;
	
	//Choice of coffee or Tea
  	printf("Do you drink coffee or tea (c/t)?");
	scanf("%c", &coffeeOrTea);           
	
	//How many cups or drinks daily
    printf("How many cups do you drink daily:");
    scanf("%d", &numOfDrinks);
	
	if( coffeeOrTea == 'c') {                    // Coffee choice WORKING
		
		if ( numOfDrinks > 20) {                 //Number of coffee drinks
		printf("An error occurred in the program!");
		    
		}
		
		else if ( numOfDrinks <= 2) {
		printf("You don't drink a lot of coffee, do you?");
		}

        else {
        printf("You drink a lot of coffee!");
        }
		
	}
	
	else if (coffeeOrTea == 't')                //tea choice WORKING

    	if ( numOfDrinks > 20) {                 //Number of Tea drinks
		printf("An error occurred in the program!");
		    
		}
		
		else if ( numOfDrinks <= 2) {
		printf("You don't drink a lot of tea, do you?");
		}

        else {
        printf("You drink a lot of tea!");
        }

	
	
	else {
    printf("An error occurred in the program!");
	}
	
    return 0;
}
