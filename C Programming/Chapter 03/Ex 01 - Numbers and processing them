 #include <stdio.h>

int main () {
		   int integer;
		   float decimalNum;

		   printf("Enter an integer:");		
		   scanf("%d", &integer);						//Declare integer

		   printf("Enter a decimal number:");
		   scanf("%f", &decimalNum); 					//Decalre decimal number
	
			printf("You entered the integer: %d \n", integer);
			printf("You entered the decimal number, rounded to two decimal places: %.2f", decimalNum);
	
	return 0;
	}
