#include <stdio.h>

int main()
{
	
	int integer, square;
	
	
  		printf("Enter an integer: \n"); 			//Enter number 
		scanf("%d", &integer);						// &num records the number
	
	
		square = integer*integer;						// The formula for square
	
		printf("The square of the number you entered is %d", square);  

  return 0;
}
